{
  "compilerOptions": {
    // path to output directory
    "outDir": "./dist/",
    // allow sourcemap support
    "sourceMap": true,
    "strict": true,
    // specify module code generation
    "module": "esnext",
    // use typescript to transpile jsx to js
    "jsx": "react",
    // specify ECMAScript target version
    "target": "es5",
    // allow a partial TypeScript and JavaScript codebase
    // "allowJs": true,
    // needed for typings to work properly e.g. with Redux toolkit
    "moduleResolution": "node",
    // Report error when not all code paths in function return a value.
    "noImplicitReturns": true,
    // allow default and named imports in one line, e.g.: import React, { useEffect } from 'react';
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/", "webpack.config.js"],
  "exclude": ["node_modules"]
}

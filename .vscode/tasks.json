  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "label": "start",
      "presentation": {
        // open in split terminal
        "panel": "shared",
        "reveal": "always",
        "group": "main"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "process",
      "label": "zsh",
      "command": "/bin/zsh",
      "presentation": {
        "echo": false,
        "focus": true,
        // open in split terminal
        "panel": "shared",
        "reveal": "always",
        "group": "main"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }

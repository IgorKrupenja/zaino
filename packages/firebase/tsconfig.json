{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "target": "es2017",
    // import JSON
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    // use typescript to transpile jsx to js
    "jsx": "react",
    "moduleResolution": "node",
    // Report error when not all code paths in function return a value.
    "noImplicitReturns": true,
    // allow default and named imports in one line, e.g.: import { useEffect } from 'react';
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": ["src"]
}

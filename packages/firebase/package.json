{
  "name": "@zaino/firebase",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production firebase -P production functions:config:set settings.region=$(node --loader ts-node/esm src/utils/getEnvRegion.ts) && rm -rf ./build && tsc",
    "build-dev": "firebase functions:config:set settings.region=$(node --loader ts-node/esm src/utils/getEnvRegion.ts) && rm -rf ./build && tsc",
    "serve": "yarn run build && firebase emulators:start --only functions",
    "shell": "yarn run build && firebase functions:shell",
    "start": "yarn run shell",
    "predeploy": "yarn run build",
    "deploy": "firebase deploy -P production --only functions",
    "predeploy-dev": "yarn run build-dev",
    "deploy-dev": "firebase deploy -P dev --only functions",
    "deploy-rules-dev": "firebase deploy -P dev --only firestore",
    "logs": "firebase functions:log",
    "deploy-new": "scripts/deploy.sh development"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": "16"
  },
  "engineStrict": true,
  "main": "build/firebase/src/index.js",
  "dependencies": {
    "@google-cloud/firestore": "^5.0.2",
    "dotenv": "^14.2.0",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.6.1",
    "firebase-tools": "^10.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.3.3"
  }
}

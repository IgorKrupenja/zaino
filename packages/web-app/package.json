{
  "name": "@zaino/web-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "nodemon --exec 'TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack-dev-server --host 0.0.0.0'",
    "build": "rm -rf ./dist && NODE_ENV=production TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack -p",
    "predeploy": "yarn run build",
    "preserve": "yarn run build",
    "serve": "firebase serve -P prod --only hosting",
    "deploy": "firebase deploy -P prod --only hosting,firestore",
    "stats": "NODE_ENV=production TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack --profile --json > dist/stats.json",
    "preanalyze": "npm run stats",
    "analyze": "webpack-bundle-analyzer dist/stats.json"
  },
  "dependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.1",
    "@reduxjs/toolkit": "^1.4.0",
    "@types/webpack": "^4.41.21",
    "@zaino/shared": "*",
    "chroma-js": "^2.1.0",
    "css-loader": "^3.6.0",
    "firebase": "^7.19.1",
    "history": "^4.10.1",
    "html-webpack-plugin": "^4.4.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "normalize.css": "^8.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-media": "^1.10.0",
    "react-modal": "^3.11.2",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-select": "^3.1.0",
    "react-tiny-popover": "5.1.0",
    "redux": "^4.0.5",
    "sass-loader": "^9.0.3",
    "sass-resources-loader": "^2.1.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7",
    "uuid": "^8.3.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@types/chroma-js": "^2.0.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.10",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/node": "^14.6.2",
    "@types/react": "^16.9.48",
    "@types/react-dom": "^16.9.8",
    "@types/react-modal": "^3.10.6",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5",
    "@types/react-select": "^3.0.19",
    "@types/uuid": "^8.3.0",
    "@types/webpack-dev-server": "^3.11.0",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-loader": "^8.1.0",
    "dotenv": "^8.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.3",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^7.7.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-react": "^7.20.6",

{
  "name": "@zaino/web-app",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "start": "nodemon --exec 'TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack serve --host 0.0.0.0'",
    "build": "rm -rf ./dist && NODE_ENV=production TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack --mode production",
    "predeploy": "yarn run build",
    "preserve": "yarn run build",
    "serve": "firebase serve -P prod --only hosting",
    "deploy": "firebase deploy -P prod --only hosting,firestore",
    "analyze": "NODE_ENV=production TS_NODE_PROJECT=\"tsconfig-for-webpack-config.json\" webpack --profile --json > dist/stats.json && webpack-bundle-analyzer dist/stats.json"
  },
  "dependencies": {

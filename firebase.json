{
  "hosting": {
    "public": "packages/web-app/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "packages/cloud-functions/firestore.rules"
  },
  "functions": {
    "source": "packages/cloud-functions"
  }
}
